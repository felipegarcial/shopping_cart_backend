{
  "compilerOptions": {
    "target": "ES6",                              
    "module": "commonjs",                      
    "rootDir": "./src",                        
    "outDir": "./dist",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,
    "baseUrl": "./src",                  
    "paths": {             
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@repositories/*": ["repositories/*"],
      "@config/*": ["config/*"],
    }
  }
}